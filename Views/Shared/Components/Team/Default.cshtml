@*View component to generate the filtering features on the side of the page. Creates links to filter by specific team.*@
@model IEnumerable<Teams>

<a class="btn btn-block btn-outline-secondary p-1" asp-action="Index" asp-controller="Home" asp-route-teamid="">Home</a>

@foreach (var x in Model)
{
    <a class="btn btn-block p-1  @(x.TeamName == ViewBag.SelectedTeam ? "btn-primary" : "btn-outline-secondary")" @*Used to highlight current team*@
       asp-action="Index" asp-controller="Home" asp-route-teamid="@x.TeamId" asp-route-teamname="@x.TeamName">@x.TeamName</a>
}
